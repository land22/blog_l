{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
    <section class="article">
        {% for article in articles %}
        <article>
            <h2>{{ article.title }}</h2>
            <div class="metadata"> Ecrire le {{ article.createdAt | date('d/m/Y') }} Ã  {{ article.createdAt | date('H:i') }} dans la categorie Politique</div>
            <div class="content">
                <img src="{{ article.image }}">
                {{ article.content | raw }}
                <a href="{{ path('blog_show', {'id':article.id}) }}" class="btn btn-primary">Lire la suite</a>
            </div>
        </article>
        {% endfor %}

    </section>
{% endblock %}
